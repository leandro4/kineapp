<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/llForm"
        android:padding="@dimen/large_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civAvatar"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorPrimaryDark"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tvNameLabel"
                android:text="@string/profile_name_title"
                android:textColor="@color/white"
                style="@style/TextViewStyleBold"/>

        <TextView
                android:id="@+id/tvName"
                tools:text="Juanito"
                android:textColor="@color/white"
                android:layout_below="@+id/tvNameLabel"
                style="@style/TextViewStyleLight"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tvSurnameLabel"
                android:text="@string/profile_surname_title"
                android:textColor="@color/white"
                style="@style/TextViewStyleBold"/>

        <TextView
                android:id="@+id/tvSurname"
                tools:text="Perez"
                android:textColor="@color/white"
                android:layout_below="@+id/tvSurnameLabel"
                style="@style/TextViewStyleLight"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/licenseLabel"
                android:text="@string/profile_license_title"
                android:textColor="@color/white"
                style="@style/TextViewStyleBold"/>

        <TextView
                android:id="@+id/licenseTextView"
                tools:text="123456"
                android:textColor="@color/white"
                android:layout_below="@+id/licenseLabel"
                style="@style/TextViewStyleLight"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/emailLabel"
                android:text="@string/profile_email_title"
                android:textColor="@color/white"
                style="@style/TextViewStyleBold"/>

        <TextView
                android:id="@+id/emailTextView"
                tools:text="pepito@gmail.com"
                android:textColor="@color/white"
                android:layout_below="@+id/emailLabel"
                style="@style/TextViewStyleLight"/>

        <android.support.v7.widget.AppCompatImageButton
                android:layout_alignTop="@+id/emailTextView"
                android:layout_alignBottom="@+id/emailTextView"
                app:srcCompat="@drawable/ic_edit_pencil"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/phoneLabel"
                android:text="@string/profile_phone_title"
                android:textColor="@color/white"
                style="@style/TextViewStyleBold"/>

        <TextView
                android:id="@+id/phoneTextView"
                tools:text="2346-656454"
                android:textColor="@color/white"
                android:layout_below="@+id/phoneLabel"
                style="@style/TextViewStyleLight"/>

        <android.support.v7.widget.AppCompatImageButton
                android:layout_alignTop="@+id/phoneTextView"
                android:layout_alignBottom="@+id/phoneTextView"
                app:srcCompat="@drawable/ic_edit_pencil"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <android.support.design.button.MaterialButton
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/RoundedCornerMaterialButton"
            android:text="@string/profile_close_session"/>
</LinearLayout>