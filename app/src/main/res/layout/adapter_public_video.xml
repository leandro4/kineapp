<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/medium_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:cardElevation="4dp"
        app:cardCornerRadius="@dimen/large_radius"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivVideo"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvTitle"
        tools:text="Movimiento vertical de cadera con cÃ­rculo"
        android:elevation="8dp"
        android:shadowRadius="4"
        android:shadowColor="@color/black_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/large_radius"
        android:layout_marginBottom="@dimen/large_margin"
        style="@style/TextViewStyleBold"/>

    <ImageView
        android:id="@+id/ivRemove"
        android:elevation="6dp"
        android:background="@drawable/circle_solid_black"
        app:srcCompat="@drawable/ic_remove_circle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>