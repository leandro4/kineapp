<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/medium_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:cardElevation="4dp"
        app:cardCornerRadius="@dimen/large_radius"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivVideo"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvTitle"
            tools:text="Movimiento vertical de cadera con cÃ­rculo"
            android:elevation="8dp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:padding="@dimen/medium_radius"
            android:background="@color/black_hint"
            android:layout_width="match_parent"
            style="@style/TextViewStyleRegular"/>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/ivRemove"
        android:elevation="6dp"
        android:background="@drawable/circle_solid_black"
        app:srcCompat="@drawable/ic_delete"
        android:padding="4dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>